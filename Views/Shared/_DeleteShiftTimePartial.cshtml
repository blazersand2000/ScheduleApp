@model Shift

<div>
   <div class="modal" id="create-shift-time" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
         <div class="modal-content">
            <div class="modal-header">
               <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
               </button>
            </div>
            <div class="modal-body">
               <h6>Are you sure you want to delete this @Model.GetType().Name.ToLower()?</h6>
               <br />
               <dl class="row">
                  <dt class="col-sm-2">
                     @Html.DisplayNameFor(model => model.Employee)
                  </dt>
                  <dd class="col-sm-10">
                     @Html.DisplayFor(model => model.Employee.Name)
                  </dd>
                  <dt class="col-sm-2">
                     @Html.DisplayNameFor(model => model.Schedule)
                  </dt>
                  <dd class="col-sm-10">
                     @Html.DisplayFor(model => model.Schedule.Name)
                  </dd>
                  <dt class="col-sm-2">
                     Date
                  </dt>
                  <dd class="col-sm-10">
                     @Model.Start.Date.ToLongDateString()
                  </dd>
                  <dt class="col-sm-2">
                     @Html.DisplayNameFor(model => model.Start)
                  </dt>
                  <dd class="col-sm-10">
                     @Html.DisplayFor(model => model.Start.TimeOfDay)
                  </dd>
                  <dt class="col-sm-2">
                     @Html.DisplayNameFor(model => model.End)
                  </dt>
                  <dd class="col-sm-10">
                     @Html.DisplayFor(model => model.End.TimeOfDay)
                  </dd>
                  <dt class="col-sm-2">
                     @Html.DisplayNameFor(model => model.ShiftRole)
                  </dt>
                  <dd class="col-sm-10">
                     @if (Model.ShiftRole == null)
                     {
                        <div>None</div>
                     }
                     else
                     {
                        @Html.DisplayFor(model => model.ShiftRole.Name)
                     }
                  </dd>
               </dl>
               <form asp-controller="Shift" asp-action="DeleteModal">
                  <input type="hidden" asp-for="Id" />
                  <div class="form-group">
                     <input type="submit" value="Delete Shift" class="btn btn-danger" data-delete="modal" />
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>